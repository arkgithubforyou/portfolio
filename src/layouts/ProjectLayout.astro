---
import BaseLayout from './BaseLayout.astro';

interface Props {
  title: string;
  description: string;
  tags: string[];
  github?: string;
  demo?: string;
}

const { title, description, tags, github, demo } = Astro.props;
const baseUrl = import.meta.env.BASE_URL;
---

<BaseLayout title={`${title} | Fangzhou Zhai`} description={description}>
  <article class="py-8">
    <div class="max-w-5xl mx-auto px-4 sm:px-6 lg:px-8">
      <!-- Back Link -->
      <a href={baseUrl} class="inline-flex items-center text-primary-400 hover:text-primary-300 mb-4 text-sm group">
        <svg class="w-4 h-4 mr-1.5 group-hover:-translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
        </svg>
        Back to Home
      </a>

      <!-- Header -->
      <header class="mb-6">
        <h1 class="text-2xl font-bold text-slate-100 mb-2">{title}</h1>
        <p class="text-slate-400 text-sm mb-3">{description}</p>

        <!-- Tags -->
        <div class="flex flex-wrap gap-1.5 mb-3">
          {tags.map((tag) => (
            <span class="px-2 py-0.5 bg-slate-800 text-primary-400 text-xs rounded">
              {tag}
            </span>
          ))}
        </div>

        <!-- Links -->
        {(github || demo) && (
          <div class="flex flex-wrap gap-2">
            {github && (
              <a
                href={github}
                target="_blank"
                rel="noopener noreferrer"
                class="inline-flex items-center px-2.5 py-1 bg-slate-800 text-slate-300 text-xs rounded hover:bg-slate-700 transition-colors"
              >
                <svg class="w-3.5 h-3.5 mr-1.5" fill="currentColor" viewBox="0 0 24 24">
                  <path fill-rule="evenodd" d="M12 2C6.477 2 2 6.484 2 12.017c0 4.425 2.865 8.18 6.839 9.504.5.092.682-.217.682-.483 0-.237-.008-.868-.013-1.703-2.782.605-3.369-1.343-3.369-1.343-.454-1.158-1.11-1.466-1.11-1.466-.908-.62.069-.608.069-.608 1.003.07 1.531 1.032 1.531 1.032.892 1.53 2.341 1.088 2.91.832.092-.647.35-1.088.636-1.338-2.22-.253-4.555-1.113-4.555-4.951 0-1.093.39-1.988 1.029-2.688-.103-.253-.446-1.272.098-2.65 0 0 .84-.27 2.75 1.026A9.564 9.564 0 0112 6.844c.85.004 1.705.115 2.504.337 1.909-1.296 2.747-1.027 2.747-1.027.546 1.379.202 2.398.1 2.651.64.7 1.028 1.595 1.028 2.688 0 3.848-2.339 4.695-4.566 4.943.359.309.678.92.678 1.855 0 1.338-.012 2.419-.012 2.747 0 .268.18.58.688.482A10.019 10.019 0 0022 12.017C22 6.484 17.522 2 12 2z" clip-rule="evenodd" />
                </svg>
                View Code
              </a>
            )}
            {demo && (
              <a
                href={demo}
                target="_blank"
                rel="noopener noreferrer"
                class="inline-flex items-center px-2.5 py-1 border border-slate-700 text-slate-300 text-xs rounded hover:border-primary-500 hover:text-primary-400 transition-colors"
              >
                <svg class="w-3.5 h-3.5 mr-1.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
                </svg>
                Live Demo
              </a>
            )}
          </div>
        )}
      </header>

      <!-- Project Content -->
      <div class="prose prose-sm prose-invert prose-slate max-w-none
        prose-headings:text-slate-100 prose-headings:font-semibold
        prose-h2:text-lg prose-h2:mt-6 prose-h2:mb-3
        prose-h3:text-base prose-h3:mt-4 prose-h3:mb-2
        prose-p:text-slate-400 prose-p:leading-relaxed prose-p:my-2
        prose-a:text-primary-400 prose-a:no-underline hover:prose-a:underline
        prose-strong:text-slate-200
        prose-ul:text-slate-400 prose-ul:my-2 prose-li:text-slate-400 prose-li:my-0.5
        prose-pre:bg-slate-800 prose-pre:text-slate-300 prose-pre:text-xs prose-pre:my-3
        prose-code:text-primary-400 prose-code:bg-slate-800 prose-code:px-1 prose-code:py-0.5 prose-code:rounded prose-code:text-xs
        prose-table:text-xs prose-table:my-3
        prose-th:text-slate-300 prose-th:font-medium prose-th:border-slate-700 prose-th:py-1.5 prose-th:px-2
        prose-td:text-slate-400 prose-td:border-slate-700 prose-td:py-1.5 prose-td:px-2
        prose-img:rounded-lg prose-img:border prose-img:border-slate-700 prose-img:my-4 prose-img:w-2/5">
        <slot />
      </div>
    </div>
  </article>
</BaseLayout>

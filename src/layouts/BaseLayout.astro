---
interface Props {
  title: string;
  description?: string;
}

const { title, description = "Fangzhou Zhai - NLP Researcher & ML Engineer with 7+ publications at ACL, EMNLP, COLING" } = Astro.props;
const baseUrl = import.meta.env.BASE_URL;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <meta name="generator" content={Astro.generator} />
    <link rel="icon" type="image/svg+xml" href={`${baseUrl}favicon.svg`} />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&family=JetBrains+Mono:wght@400;500&display=swap" rel="stylesheet" />
    <title>{title}</title>
  </head>
  <body class="bg-slate-900 text-slate-100 font-sans antialiased">
    <header class="sticky top-0 z-50 bg-slate-900/90 backdrop-blur-md border-b border-slate-800">
      <nav class="max-w-5xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="flex items-center justify-between h-14">
          <a href={baseUrl} class="text-lg font-semibold text-slate-100 hover:text-primary-400 transition-colors">
            Fangzhou Zhai
          </a>
          <div class="flex items-center gap-6 text-sm">
            <a href={baseUrl} class="text-slate-400 hover:text-primary-400 transition-colors">Home</a>
            <a href="#projects" class="text-slate-400 hover:text-primary-400 transition-colors">Projects</a>
            <a href="#publications" class="text-slate-400 hover:text-primary-400 transition-colors">Publications</a>
            <a href="#contact" class="text-slate-400 hover:text-primary-400 transition-colors">Contact</a>
          </div>
        </div>
      </nav>
    </header>

    <main>
      <slot />
    </main>

    <footer class="bg-slate-950 text-slate-500 py-6 mt-16">
      <div class="max-w-5xl mx-auto px-4 sm:px-6 lg:px-8 text-center text-sm">
        <p>&copy; {new Date().getFullYear()} Fangzhou Zhai. All rights reserved.</p>
      </div>
    </footer>
  </body>
</html>

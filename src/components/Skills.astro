---
// ============================================
// SKILLS - Edit your skills here
// ============================================
const skillCategories = [
  {
    title: "ML Development",
    skills: [
      "PyTorch, TensorFlow, Keras",
      "Python: NumPy, pandas, scikit-learn",
      "BERT, XLNet, GPT, Hugging Face",
      "Fine-tuning and domain adaptation",
      "Deep semi-supervised learning",
      "NLU, generation, image to text",
    ],
  },
  {
    title: "Data",
    skills: [
      "Human evaluation at scale",
      "Crowdsourcing pipeline design",
      "Custom metric development",
      "Data augmentation & corpus construction",
      "Resource-efficient ML pipeline",
    ],
  },
  {
    title: "Production & Communication",
    skills: [
      "Git, experiment tracking",
      "Scientific writing & publication",
      "Presentation & documentation",
    ],
  },
];
---

<section id="skills" class="py-20 bg-slate-50">
  <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="text-center mb-12">
      <h2 class="text-3xl sm:text-4xl font-bold text-slate-900 mb-4">Skills & Expertise</h2>
      <p class="text-lg text-slate-600 max-w-2xl mx-auto">
        Technical skills and areas of expertise developed through academic research and industry experience.
      </p>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
      {skillCategories.map((category) => (
        <div class="bg-white rounded-xl p-6 border border-slate-200 shadow-sm">
          <h3 class="text-xl font-semibold text-slate-900 mb-4 pb-4 border-b border-slate-100">
            {category.title}
          </h3>
          <ul class="space-y-3">
            {category.skills.map((skill) => (
              <li class="flex items-center text-slate-600">
                <svg class="w-5 h-5 text-primary-500 mr-3 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd" />
                </svg>
                {skill}
              </li>
            ))}
          </ul>
        </div>
      ))}
    </div>
  </div>
</section>
